<!-- Animated CTA Banner -->
<div class="text-center my-5">
  <h2 class="mb-4">Shop Handpicked gifts Curated for UAE Homes Delivered by Amazon</h2>
  <div class="cta-video-wrapper" style="width: 100%; display: flex; justify-content: center;">
    <video 
      autoplay 
      muted 
      loop 
      playsinline 
      class="img-fluid rounded cta-video" 
      style="width: 100%; max-width: 1200px; border-radius: 1rem; display: block;"
    >
      <source src="/videos/CTAdesktop.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
  <a href="/shop/" class="btn btn-light btn-lg mt-3 px-5" style="font-weight: 600; display: inline-block;">
    Shop All Products
  </a>
</div>
<style>
  .cta-video-wrapper {
    width: 100%;
  }
  .cta-video {
    width: 100%;
    height: auto;
    max-width: 1200px;
    border-radius: 1rem;
    aspect-ratio: 16 / 9;
    /* Prevent layout shift for images inside video wrapper, if any */
    display: block;
  }
  @media (max-width: 767px) {
    .cta-video {
      max-width: 100vw;
      border-radius: 0.75rem;
      aspect-ratio: 9 / 16;
    }
    .cta-video-wrapper {
      padding-left: 0;
      padding-right: 0;
    }
  }
</style>
<script>
  // Swap video source based on screen width
  document.addEventListener('DOMContentLoaded', function() {
    var video = document.querySelector('.cta-video');
    if (!video) return;
    var source = video.querySelector('source');
    if (window.innerWidth < 768) {
      source.setAttribute('src', '/videos/CTAmobile.mp4');
    } else {
      source.setAttribute('src', '/videos/CTAdesktop.mp4');
    }
    video.load();
  });
</script>
